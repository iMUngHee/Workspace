{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@Style/*": ["src/styles/*"],
      "@Component/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules", "build"]
}
